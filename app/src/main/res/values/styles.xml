<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <!-- Light themes application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="switch_colorPrimary">#7793a1</item>
        <item name="colorPrimaryDark">#203b47</item>
        <item name="colorAccent">#D81B60</item>
        <item name="switch_black_white">#fff</item>
        <item name="switch_yellow_blue">#fedd02</item>
        <item name="background_dark">#fff</item>
        <item name="switch_white_black">#121212</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- Dark themes application theme. -->
    <style name="DarkThemes" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="switch_colorPrimary">#203b47</item>
        <item name="colorPrimaryDark">#001520</item>
        <item name="colorAccent">#a00037</item>
        <item name="switch_black_white">#121212</item>
        <item name="switch_yellow_blue">#00e676</item>
        <item name="background_dark">#001520</item>
        <item name="switch_white_black">#fff</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="ToolbarBg">
        <item name="android:background">?attr/switch_black_white</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">?attr/actionBarTheme</item>
    </style>

    <style name="CardViewBackGround">
        <item name="android:background">@color/md_white_1000</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">64dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">16dp</item>
    </style>

    <style name="EditTextBackGround">
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/design_text_size</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="TextViewBackground">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?attr/switch_white_black</item>
    </style>

    <style name="TextViewBackgroundLight">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/switch_white_black</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="ButtonBackGround">
        <item name="android:background">@drawable/bg_button_rename</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ToolBarHome">
        <item name="android:background">?attr/switch_colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:maxHeight">?attr/actionBarSize</item>
        <item name="colorControlNormal">@color/md_white_1000</item>
    </style>

    <style name="TitleNavigationDrawer">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="ContentNavigationDrawer">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">

        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/WindowTransitionAnimation</item>
    </style>

    <style name="AppTheme.SlideActivityTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <style name="TextViewRegular">
        <item name="android:fontFamily">@font/robotocondensed_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewBold">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="CustomProgressbar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="colorButtonNormal">#f50057</item>
        <item name="colorControlActivated">#33691e</item>
        <item name="colorControlHighlight">#ff6d00</item>
        <item name="android:progressDrawable">@drawable/progress_layer_list</item>
        <item name="android:minWidth">200dp</item>
    </style>

    <style name="WindowTransitionAnimation">
       
    </style>

</resources>
